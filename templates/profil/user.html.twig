<div class="card">
    {% for user in users |slice(1, 1) %}

    <div class="card-body">

        <div class="user-avatar text-center d-block">
            <img src="{{ asset('image/'~ user.Photo) }}"  class="rounded-circle user-avatar-xxl">

        </div>

        <div class="text-center">
            <h2 class="font-24 mb-0">{{ user.Nom}} {{ user.Prenom}}</h2>
            <p>{{ user.Role}}</p>
        </div>
    </div>
    <div class="card-body border-top">
        <h3 class="font-16">Contact Information</h3>

        <div class="">
            <ul class="list-unstyled mb-0">
                <li class="mb-2"><i class="fas fa-fw fa-envelope mr-2"></i>{{ user.Email}}</li>
                <li class="mb-0"><i class="fas fa-fw fa-phone mr-2"></i>{{ user.Tel}}</li>
            </ul>
        </div>
    </div>

    <div class="card-body border-top">
        <h3 class="font-16">Age</h3>
        <h1 class="mb-0">{{ user.Age }}</h1>
        <div class="rating-star">

        </div>

    </div>
    <div class="card-body border-top">
        <h3 class="font-16">Social Channels</h3>
        <div class="">
            <ul class="mb-0 list-unstyled">
                <li class="mb-1"><a href="#"><i class="fab fa-fw fa-facebook-square mr-1 facebook-color"></i>fb.me/Rihabhaddad</a></li>
                <li class="mb-1"><a href="#"><i class="fab fa-fw fa-twitter-square mr-1 twitter-color"></i>twitter.com/Rihabhaddad</a></li>
                <li class="mb-1"><a href="#"><i class="fab fa-fw fa-instagram mr-1 instagram-color"></i>instagram.com/Rihabhaddad</a></li>
            </ul>
        </div>

    </div>
        <div class="card-body border-top">
            <h3 class="font-16">Langues</h3>
            <div>
                <a href="#" class="badge badge-light mr-1">Francais</a><a href="#" class="badge badge-light mr-1">Arabe</a><a href="#" class="badge badge-light mr-1">English</a>
            </div>
        </div>


    {% endfor %}

    <div class="row">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <h5 class="card-header">Certifications</h5>
                <div class="card-body">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="image/agile.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="image/CCNA.png" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="image/certif.jpg" alt="Third slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span> </a>
                        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span> </a>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
