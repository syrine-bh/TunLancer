
<div class="section-block">
    <h3 class="section-title">Competences</h3>
</div>
<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                <div class="media influencer-profile-data d-flex align-items-center p-2">
                    {% for competence in competence %}
                    <div class="mr-4">
                        <p> {{ competence.Titre}}</p> <br>
                        <a href="" data-toggle="modal" data-target="#editModalExperience" style="align-content:center "> <i class=" fas fa-edit"></i></a>

                        {{ render(controller( 'App\\Controller\\CompetencesController::editCom',{'id':competence.id})) }}
                        <a href="{{path('deletecom', {id:competence.id})}}" > <i class=" fas fa-trash"></i></a>
                    </div>


                    <div class="media-body ">
                        <div class="influencer-profile-data">
                            <p>
                            <div class="progress mb-3">
                                <div class="progress-bar" role="progressbar" style="width: 65%;" aria-valuenow="65" aria-valuemin="0" aria-valuemax="100"></div>

                            </div>

                            </p>


                        </div>

                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

</div>
