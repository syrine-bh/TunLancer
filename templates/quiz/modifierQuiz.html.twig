{% extends 'base.html.twig' %}
{% block title %}Admin-Modifier-Quiz{% endblock %}
{% block body %}

    <div class="container">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-success">Enregistrer</button>
        <a href="{{path ('list')}}" class="btn btn-primary mb-3  float-right">Retour</a>
        {{ form_end(form) }}
        <div class="">
            <h2>Liste des Quizs</h2>
            {% for q in quiz %}
                <div class=" row alert alert-secondary mt-3 " role="alert">
                    <p class="col-md-10 col-lg-11">{{q.nom}}</p>
                    <a href="{{path ('modifierQuiz',{'id':q.id})}}" class="btn btn-primary   float-right col-md-2 col-lg-1 ">Modifier</a>
                </div>

            {% endfor %}
        </div>
    </div>

{% endblock %}