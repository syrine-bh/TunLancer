{% extends "baseBack.html.twig" %}

{% block section %}

    <div style="max-width: 60%;box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.07);border-radius: 10px;position: relative;top: 25px;"
         class="container">
        <div class="row">

            <div class="col-xl-12 col-lg-12 col-md-8 col-sm-12 col-12">
                <div class="card">
                        <h5 class="card-header">Ajouter Concour</h5>
                    <div class="card-body">
                        {{ form_start(form) }}


                        <div class="form-group col-md-10 ">
                            <label for="nom">Nom Concours</label>
                            {{ form_widget(form.nom, { 'attr' : { 'class' : 'form-control' } }) }}
                        </div>
                        <div class="form-group col-md-10">
                            <label for="sujet">Sujet Concours</label>
                            {{ form_widget(form.sujet, { 'attr' : { 'class' : 'form-control' } }) }}
                        </div>

                        <div class="form-group col-md-10">
                            <label for="description">Description</label>
                            {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' } }) }}
                        </div>
                        <div class="form-group col-md-10">
                            <label for="dateDebut">Date Lancement Concours</label>
                            {{ form_widget(form.dateDebut, { 'attr' : { 'class' : 'form-control' } }) }}
                        </div>

                        <div class="form-group col-md-10">
                            <label for="dateFin">Date Fin Concours</label>
                            {{ form_widget(form.dateFin, { 'attr' : { 'class' : 'form-control' } }) }}
                        </div>
                        <div class="form-group col-md-10">
                            <label for="categorie">Cat√©gorie</label>
                            {{ form_widget(form.categorie, { 'attr' : { 'class' : 'form-control' } }) }}
                        </div>
                        <div class="form-group col-md-10">
                            <label for="categorie">c'est un concours de videos ?</label>
                            {{ form_widget(form.isVideo, { 'attr' : { 'class' : 'form-control' } }) }}
                        </div>
                        <div class="form-group col-md-10">
                            <label for="imageName">Image</label>

                            {{ form_widget(form.imageName, { 'attr' : { 'class' : 'form-control' } }) }}
                        </div>
                        <br>
                        <div class="col-sm-6 pl-0">
                            <button type="submit" class="btn btn-space btn-primary">Submit</button>
                            <button type="reset" class="btn btn-space btn-secondary">Cancel</button>
                        </div>
                        {{ form_end(form) }}


                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

