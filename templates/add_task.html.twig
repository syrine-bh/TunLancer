<div class="modal fade" id="addModalExperience" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title" id="addModalLabel">Add Task</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
                {{ form_start(form, {'action': path('taskadd'), 'method': 'POST'}) }}

                <div class="form-group">
                    <label for="email1">Titre</label>
                    {{ form_widget(form.Titre, {'attr': {'class': 'form-control'}}) }}
                    <small id="emailHelp" class="form-text text-muted"></small>
                </div>
                <div class="form-group">
                    <label for="email1">Priorite</label>
                    {{ form_widget(form.Priorite, {'attr': {'class': 'form-control'}}) }}
                    <small id="emailHelp" class="form-text text-muted"></small>
                </div>
                <div class="form-group">
                    <label for="email1">Date</label>
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                    <small id="emailHelp" class="form-text text-muted"></small>
                </div>
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}

            </div>
        </div>
        {{ form_end(form) }}

    </div>
</div>