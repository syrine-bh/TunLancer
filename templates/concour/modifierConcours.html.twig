{% extends "baseFront.html.twig" %}

{% block section %}

    <div style="max-width: 60%;box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.07);border-radius: 10px;position: relative;top: 25px;" class="container">


        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="nom">Nom Concours</label>
                {{ form_widget(form.nom, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
            <div class="form-group col-md-6">
                <label for="sujet">Sujet Concours</label>
                {{ form_widget(form.sujet, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>
        <div class="form-group">
            <label for="dateDebut">Date Lancement Concours</label>
            {{ form_widget(form.dateDebut, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>

        <div class="form-group">
            <label for="dateFin">Date Fin Concours</label>
            {{ form_widget(form.dateFin, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>


        {{ form_end(form) }}
    </div>

{% endblock %}

