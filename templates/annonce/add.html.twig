
{% extends "baseFront.html.twig" %}

{% block section %}
    <h1>Ajouter une  Annonce</h1>
    <div style="max-width: 60%;box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.07);border-radius: 10px;position: relative;top: 25px;" class="container">


        {{ form_start(form) }}
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputEmail4">titre</label>
                {{ form_widget(form.nom, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">Description</label>
                {{ form_widget(form.description, { 'attr' : { 'class' : 'form-control' } }) }}
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress">Date</label>
            {{ form_widget(form.date, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>
        <div class="form-group">
            <label for="inputAddress2">categorie</label><br>
            {{ form_widget(form.categorie, { 'attr' : { 'class' : 'form-control' } }) }}
        </div>
        <div style="text-align: center" class="form-group">
            {{ form_widget(form.Ajouter, { 'attr' : { 'class' : 'btn btn-primary' } }) }}

        </div>




        {{ form_end(form) }}
    </div>

{% endblock %}
