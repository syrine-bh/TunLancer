

{% block title annonce.nom %}

{% block body %}
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                </div>
                <div class="col-md-4">
                    <h1>{{ annonce.nom}}</h1>

                    <div class="text-primary" style="font-size: 4rem; font-weight: bold;">{{annonce.renumeration }} €</div>
                    <a href="#" class="btn btn-primary">postuler</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt-4">
        <p>
            {{ annonce.description }}
        </p>

        <div class="row">
            <div class="col-md-8">
                <h2>Caractéristiques</h2>
                <table class="table table-striped">
                    <tr>
                        <td>lieux</td>
                        <td>{{ annonce.lieux }}</td>
                    </tr>
                    <tr>
                        <td>Duree</td>
                        <td>{{ annonce.date |date('Y-m-d') }}</td>
                    </tr>

                </table>
            </div>
            <div class="col-md-4">
                <h2>Spécificités</h2>
            </div>
        </div>
    </div>

    <div>
        {{ form(form) }}
    </div>


{% endblock %}